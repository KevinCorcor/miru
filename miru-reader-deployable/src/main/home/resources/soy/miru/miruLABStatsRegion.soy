{namespace soy.miru.page}

/**
 *
 * @param? rebuild
 * @param? global
 */
{template .labStatsRegion}
    {if $global}
        <div class="panel panel-default" style="background-color: rgba(255, 255, 255, 0.9);">
            {foreach $r in $global}
                <div class="panel-heading">LAB global {$r.title} ({$r.total|noAutoescape})</div>
                <div class="lab-scroll-wave" style="width:100%; height:275px;">
                    <div style="width:{$r.width}px; height:250px; background-color:black; resize: horizontal;">
                        <canvas class="lab-wave" id="values"
                            data-lab-wave-id="{$r.id}" data-lab-wave-type="{$r.graphType}">
                        </canvas>
                        <script>
                            miru.lab.data['{$r.id}'] = {$r.waveform|noAutoescape};
                        </script>
                    </div>
                </div>
            {/foreach}
        </div>
    {/if}

    {if $rebuild}
        <div class="panel panel-default" style="background-color: rgba(255, 255, 255, 0.9);">
            {foreach $r in $rebuild}
                <div class="panel-heading">LAB rebuild {$r.title}  ({$r.total|noAutoescape})</div>
                <div class="lab-scroll-wave" style="width:100%; height:275px;">
                    <div style="width:{$r.width}px; height:250px; background-color:black; resize: horizontal;">
                        <canvas class="lab-wave" id="values"
                            data-lab-wave-id="{$r.id}" data-lab-wave-type="{$r.graphType}">
                        </canvas>
                        <script>
                            miru.lab.data['{$r.id}'] = {$r.waveform|noAutoescape};
                        </script>
                    </div>
                </div>
            {/foreach}
        </div>
    {/if}

   

{/template}
