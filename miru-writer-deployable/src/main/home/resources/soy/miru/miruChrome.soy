{namespace soy.miru.chrome}

/**
 * @param title
 * @param header
 * @param region
 * @param version
 * @param plugins
 */
{template .chromeRegion}
<!DOCTYPE HTML>
<html lang="en" dir="ltr">
	<head>
	    <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{$title}</title>
        {call .styles /}
        <script src="/static/scripts/jquery-2.1.0.min.js"></script>
        <script src="/static/scripts/Chart.js"></script>
        <script src="/static/scripts/Chart.StackedBar.js"></script>
        <script src="/static/scripts/legend.js"></script>
        <script src="/static/scripts/miru.js"></script>
        <script src="/static/vendor/bootstrap-3.3.2/js/bootstrap.js"></script>
        <link href="/static/img/favicon.ico" rel="shortcut icon" type="image/x-icon"/>
	</head>
	<body>
        {$header|noAutoescape}
        <div class="container">
            <div class="row">
                <div class="col-md-2">
                    {call .nav}
                        {param plugins: $plugins /}
                    {/call}
                </div>
                <div class="col-md-10">
                    {$region|noAutoescape}
                </div>
            </div>
        </div>
        {call .footer}
            {param version: $version /}
        {/call}
	</body>
</html>
{/template}

/**
 *
 */
{template .styles}
    <!-- Character Encoding -->
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <!-- jquery-ui -->
    <link rel="stylesheet" href="/static/css/jquery-ui/ui-lightness/jquery-ui-1.10.4.custom.min.css">

    <!-- Vanilla bootstrap -->
    <link rel="stylesheet" type="text/css" href="/static/vendor/bootstrap-3.3.2/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" media="screen" href="/static/vendor/bootstrap-3.3.2/css/bootstrap-theme.min.css">

    <!-- bootstrap-multiselect -->
    <link rel="stylesheet" href="/static/vendor/bootstrap-multiselect/css/bootstrap-multiselect.css">
    <link rel="stylesheet" href="/static/vendor/bootstrap-multiselect/css/prettify.css">
    <link rel="stylesheet" href="/static/css/font-awesome.min.css">

    // HEY ENGINEERS, add CSS here for now:
    <link rel="stylesheet" href="/static/css/miru.css">

    // following CC is for IE8 and lower. No harm in leaving it here.
    // It's no overhead to other browsers and would automatically give unsupported IE8 a fighting chance to view content
    <!--[if lt IE 9]>
    <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
{/template}

/**
 * @param services
 */
{template .headerRegion}
	<div class="navbar navbar-default" role="navigation">
	    <div class="navbar-header">
            <a class="navbar-brand" href="/miru/writer">
                <span><img src="/static/img/icon.png" alt="Fun with bits" width="100" height="50"><img>{$services.cluster}-Writer&nbsp{$services.instance}/{$services.total}</span>
            </a>
	    </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            {if $services}
                <ul class="nav navbar-nav">
                    {foreach $s in $services}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{$s.name} <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                {foreach $i in $s.instances}
                                    <li><a href="http://{$i.host}:{$i.port}{$i.path}">{$i.name}</a></li>
                                {/foreach}
                            </ul>
                        </li>
                    {/foreach}
                </ul>
            {/if}
        </div>
	</div>
{/template}

/**
 * @param plugins
 */
{template .nav}
    <div style="margin-bottom:20px;">
        {foreach $plugin in $plugins}
            <a class="list-group-item" href="{$plugin.path}">
                <span class="glyphicon glyphicon-{$plugin.glyphicon}"></span>{sp}
                {$plugin.name}
            </a>
        {/foreach}
    </div>
{/template}

/**
 *
 */
{template .favicon}
    <!-- favicon -->
    //<link rel="icon" type="image/png" href="/static/img/favicon.png">
{/template}

/**
 *
 */
{template .footer}
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <a href="https://github.com/jivesoftware/miru" style="text-shadow: 2px 2px #333;">Miru on GitHub</a>
            </div>
        </div>
	</div>
{/template}
