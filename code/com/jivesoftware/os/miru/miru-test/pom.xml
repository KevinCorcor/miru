<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.jivesoftware.os.miru.inheritance.poms</groupId>
        <artifactId>shared-lib-build-management</artifactId>
        <version>0.117-SNAPSHOT</version>
        <relativePath>../inheritance-poms/shared-lib-build-management/pom.xml</relativePath>
    </parent>
    <groupId>com.jivesoftware.os.miru</groupId>
    <artifactId>miru-test</artifactId>
    <version>0.117-SNAPSHOT</version>

    <properties>
        <module.type>executable</module.type>
        <scala.version>2.10.2</scala.version>
        <gatling.version>2.0.0-M3a</gatling.version>
        <miru.perftest.hostports>localhost:49600</miru.perftest.hostports>
        <miru.perftest.bghostports>localhost:49600</miru.perftest.bghostports>
        <miru.perftest.tenant>test1</miru.perftest.tenant>
        <miru.perftest.datadir>${project.build.directory}/test-classes/data</miru.perftest.datadir>
        <miru.perftest.numreplicas>3</miru.perftest.numreplicas>
        <miru.perftest.numusers>100</miru.perftest.numusers>
        <miru.perftest.rampseconds>10</miru.perftest.rampseconds>
        <miru.perftest.batchsize>1000</miru.perftest.batchsize>
        <miru.perftest.onlineopen>hybrid</miru.perftest.onlineopen>
        <miru.perftest.onlineclosed>mem_mapped</miru.perftest.onlineclosed>
        <miru.perftest.queryloops>1</miru.perftest.queryloops>
        <miru.perftest.querypause>1000</miru.perftest.querypause>
        <miru.perftest.bgbatchsize>10</miru.perftest.bgbatchsize>
        <miru.perftest.bgpause>1000</miru.perftest.bgpause>
        <miru.perftest.bgoffset>0</miru.perftest.bgoffset>
        <miru.perftest.genseed>12345</miru.perftest.genseed>
        <miru.perftest.genextras></miru.perftest.genextras>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
        </dependency>
        <dependency>
            <groupId>com.jivesoftware.os.miru</groupId>
            <artifactId>miru-api</artifactId>
            <version>0.117-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.jivesoftware.os.miru</groupId>
            <artifactId>miru-plugin</artifactId>
            <version>0.117-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.jivesoftware.os.miru</groupId>
            <artifactId>miru-stream-plugins</artifactId>
            <version>0.117-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.jivesoftware.os.miru</groupId>
            <artifactId>miru-reco-plugins</artifactId>
            <version>0.117-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.jivesoftware.os.jive.utils</groupId>
            <artifactId>id</artifactId>
        </dependency>
        <dependency>
            <groupId>com.jivesoftware.os.jive.utils</groupId>
            <artifactId>ordered-id</artifactId>
        </dependency>
        <dependency>
            <groupId>com.jivesoftware.os.jive.utils</groupId>
            <artifactId>logger</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-cli</groupId>
            <artifactId>commons-cli</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.hadoop</groupId>
            <artifactId>hadoop-common</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.code.findbugs</groupId>
            <artifactId>jsr305</artifactId>
        </dependency>

        <dependency>
            <groupId>org.scala-lang</groupId>
            <artifactId>scala-compiler</artifactId>
            <version>${scala.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>org.scala-lang</groupId>
                    <artifactId>scala-library</artifactId>
                </exclusion>
            </exclusions>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.scala-lang</groupId>
            <artifactId>scala-library</artifactId>
            <version>${scala.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>io.gatling.highcharts</groupId>
            <artifactId>gatling-charts-highcharts</artifactId>
            <version>${gatling.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>xml-apis</groupId>
            <artifactId>xml-apis</artifactId>
            <version>1.4.01</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>log4j-over-slf4j</artifactId>
            <scope>runtime</scope>
        </dependency>
    </dependencies>

    <pluginRepositories>
        <pluginRepository>
            <id>excilys</id>
            <name>Excilys Repository</name>
            <url>http://repository.excilys.com/content/groups/public</url>
        </pluginRepository>
    </pluginRepositories>

    <build>
        <plugins>
            <plugin>
                <groupId>io.gatling</groupId>
                <artifactId>gatling-maven-plugin</artifactId>
                <version>${gatling.version}</version>
                <configuration>
                    <jvmArgs>
                        <arg>-Dhostports=${miru.perftest.hostports}</arg>
                        <arg>-Ddatafileprefix=${miru.perftest.datadir}/${miru.perftest.tenant}</arg>
                        <arg>-Dnumreplicas=${miru.perftest.numreplicas}</arg>
                        <arg>-Dnumusers=${miru.perftest.numusers}</arg>
                        <arg>-Drampseconds=${miru.perftest.rampseconds}</arg>
                        <arg>-Dbatchsize=${miru.perftest.batchsize}</arg>
                        <arg>-Donlineopen=${miru.perftest.onlineopen}</arg>
                        <arg>-Donlineclosed=${miru.perftest.onlineclosed}</arg>
                        <arg>-Dqueryloops=${miru.perftest.queryloops}</arg>
                        <arg>-Dquerypause=${miru.perftest.querypause}</arg>
                        <arg>-Dbgbatchsize=${miru.perftest.bgbatchsize}</arg>
                        <arg>-Dbgpause=${miru.perftest.bgpause}</arg>
                        <arg>-Dbgoffset=${miru.perftest.bgoffset}</arg>
                    </jvmArgs>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>miru-test-generate</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>execute-generate</id>
                                <phase>test</phase>
                                <goals>
                                    <goal>java</goal>
                                </goals>
                                <configuration>
                                    <mainClass>com.jivesoftware.os.miru.test.MiruTestDatasetGenerator</mainClass>
                                    <commandlineArgs>
                                        -o ${miru.perftest.datadir} -t ${miru.perftest.tenant} -r ${miru.perftest.genseed} ${miru.perftest.genextras}
                                    </commandlineArgs>
                                    <arguments>
                                        <argument>-o</argument>
                                        <argument>${miru.perftest.datadir}</argument>
                                        <argument>-t</argument>
                                        <argument>${miru.perftest.tenant}</argument>
                                        <argument>-r</argument>
                                        <argument>${miru.perftest.genseed}</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>miru-test-wal</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.gatling</groupId>
                        <artifactId>gatling-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>execute-wal</id>
                                <phase>test</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <simulationClass>com.jivesoftware.os.miru.test.MiruWALSimulation</simulationClass>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>miru-test-elector</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.gatling</groupId>
                        <artifactId>gatling-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>execute-elector</id>
                                <phase>test</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <simulationClass>com.jivesoftware.os.miru.test.MiruElectorSimulation</simulationClass>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>miru-test-online</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.gatling</groupId>
                        <artifactId>gatling-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>execute-online</id>
                                <phase>test</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <simulationClass>com.jivesoftware.os.miru.test.MiruOnlineSimulation</simulationClass>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>miru-test-query</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.gatling</groupId>
                        <artifactId>gatling-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>execute-query</id>
                                <phase>test</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <simulationClass>com.jivesoftware.os.miru.test.MiruQuerySimulation</simulationClass>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>miru-test-trendy</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>io.gatling</groupId>
                        <artifactId>gatling-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>execute-query</id>
                                <phase>test</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <simulationClass>com.jivesoftware.os.miru.test.MiruTrendySimulation</simulationClass>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
