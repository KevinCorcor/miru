{namespace soy.miru.section}

/**
 * Host entry section
 *
 * @param host
 * @param heartbeat
 * @param sizeInMemory
 * @param sizeOnDisk
 */
{template .hostEntryRegion}
    <tr>
        <td>
            <a href="/miru/manage/hosts/{$host.logicalName|escapeUri}/{$host.port}#focus">{$host.logicalName}</a>
        </td>
        <td>{$host.port}</td>
        <td>{$heartbeat} ms</td>
        <td>{$sizeInMemory}</td>
        <td>{$sizeOnDisk}</td>
    </tr>
{/template}
